# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Note {
  id: ID!
  title: String!
  content: String!
  user: User!
}

type UserConfig {
  id: ID!
  isDarkMode: Boolean!
  isListMode: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
  email: String!
}

input NewNote {
  title: String!
  content: String!
}

input RefreshTokenInput{
  token: String!
}

input NewUser {
  name: String!
  email: String!
  password: String!
}

input Login {
  email: String!
  password: String!
}

input NewUserConfig {
  isDarkMode: Boolean!
  isListMode: Boolean!
  fkUser: Int!
}

type Mutation {
  createNote(input: NewNote!): Note!
  createUser(input: NewUser!): String!
  login(input: Login!): String!
  refreshToken(input: RefreshTokenInput!): String!
  createUserConfig(input: NewUserConfig!): Int!
}

type Query {
  notes: [Note!]!
  userConfig: UserConfig!
}

type Subscription {
  SubscriptionNoteAdded: Note!
}